// Mixins
mixin liquidity(order, price, amount_ppc, amount_nbt)
  tr
    td #{order}
    td #{price}
    td #{amount_ppc}
    td #{amount_nbt}

mixin trade(date, id, type, price, amount)
  tr
    td #{date}
    td #{id}
    td #{type}
    td #{price}
    td #{amount}

// Content

header
  p Test

